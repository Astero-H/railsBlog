<h2 class= "h2 text-center"> Edition de l'article </h2>
<!-- TODO : Reste à pouvoir modifier l'image associée à l'article   -->
<div class="container">
  <%= form_for @post do |f| %>
    <div class="form-group">
      <label for="exampleInputEmail1">Titre de l'article</label>
      <%= f.text_field :title, class: 'form-control', placeholder:'Titre'%>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Description de l'article</label>
      <%= f.text_area :description, class: 'form-control', placeholder:'Description' %>
    </div>
    <div class="form-group">
      <%= f.submit "Modifier l'article", class: "btn btn-success" %>
    </div>
  <% end %>
  <p><a href="<%= posts_path%>" class="btn btn-primary"> Retour aux articles </a></p>
</div>
