

<h2 class= "h2 text-center"> Liste des posts</h2>


<table class="table table-sm">
  <thead>
    <tr>
      <th scope="col">Titre</th>
      <th scope="col">Date</th>
      <th scope="col">Description</th>
      <th scope="col">Image </th>
      <th scope="col">Auteur</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |a_post| %>
        <tr>
            <td> <%= a_post.title%> </td>
            <td> <%= a_post.date%> </td>
            <td> <%= a_post.description%> </td>
            <td> <%= a_post.image%> </td>
            <td> <%= a_post.user_id%> </td>
        </tr>
    <% end %>
  </tbody>
</table>







